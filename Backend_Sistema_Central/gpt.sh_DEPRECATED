#!/bin/bash

# Archivo de salida
OUTPUT_FILE="gpt.txt"
> "$OUTPUT_FILE"  # vacÃ­a si ya existe

# FunciÃ³n para procesar una carpeta
process_folder() {
    local folder="$1"
    echo "ðŸ—‚ï¸ Procesando carpeta: $folder" >> "$OUTPUT_FILE"

    for file in "$folder"/*.cs; do
        echo "===== $(basename "$file") =====" >> "$OUTPUT_FILE"
        cat "$file" >> "$OUTPUT_FILE"
        echo -e "\n\n" >> "$OUTPUT_FILE"
    done
}

# Procesar Controllers y Models
process_folder "Controllers"
process_folder "Models"

echo "âœ… Listo. Guardado en $OUTPUT_FILE"
